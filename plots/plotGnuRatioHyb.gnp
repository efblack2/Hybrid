#!/usr/bin/gnuplot
# call it as:
# gnuplot -c plot.gnp stout
#
machine=ARG1

set terminal pdf enhanced
set output machine."Ratio.pdf"
set style line 1 ps 0.5 lc rgb "#ff0000";
set style line 2 ps 0.5 lc rgb "#ff4f00";

set style line 3 ps 0.4 lc rgb "#0000ff";
set style line 4 ps 0.4 lc rgb "#0099ff";

set style line 5 ps 0.4 lc rgb "#00ff00";
set style line 6 ps 0.4 lc rgb "#00ff99";

set key top left box
set grid

set xlabel "Number of Processors/Threads"
set ylabel "Time [S]"
     
set title machine
#set label "" at screen 0.5, 0.9 center font "Arial,11"
set label "MPI\_{sm} to openMP Ratio" at graph 0.5, 1.035 center font "Arial,11"

plot [0:] [0:2]   machine.'/gnu/laplace.txt'   using 1:($6/$18) title "Gnu Compiler"   with linespoints ls 1,\
                  machine.'/gnu/laplace.txt'   using 1:($12/$18) title "Gnu Compiler"   with linespoints ls 2
     
